<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="retryButtonText" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="noDataFoundStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="currentStateStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="basicInfoStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="userNameStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="headerStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>